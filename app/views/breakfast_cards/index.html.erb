<p id="notice"><%= notice %></p>

<h1>Breakfast Cards</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breakfast_cards.each do |breakfast_card| %>
      <tr>
        <td><%= link_to 'Show', breakfast_card %></td>
        <td><%= link_to 'Edit', edit_breakfast_card_path(breakfast_card) %></td>
        <td><%= link_to 'Destroy', breakfast_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

