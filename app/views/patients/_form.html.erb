<div class="container mt-1">
  <div class = "row justify-content-center">
    <div class = "col-10 ">
      <%= render  "shared/errors",obj: @patient %>
      <%= form_with(model: @patient, class: "shadow p-3 mb-3 bg-box rounded", local: true) do |f| %>
      
      <div class="form-group row"> 
        <%= f.label "Vorname:", class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :first_name, class: "form-control shadow rounded", placeholder: "Vorname" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label "Name:", class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :last_name, class: "form-control shadow rounded", placeholder: "Nachname" %>
        </div>
      </div>
      <div class="form-group row ">  
        <%= f.label "Station:", class: "col-2 col-form-label" %>
        <div class="col-10 text-secondary">
          <%= f.select :station, options_for_select(["1", "2", "3", "4", "5", "6", "7"], @patient.station), class: "form form-group form-control shadow" %>
        </div>
      </div>
      <div class="form-group row">  
        <%= f.label "Raum:", class: "col-2 col-form-label" %> 
        <div class="col-10">
          <%= f.text_field :room_nr, class: "form-control shadow rounded", placeholder: "Raum" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label "Speisesaal:", class: "col-2 col-form-label" %>   
        <div class="col-10">
          <%= f.text_field :dining_room, class: "form-control shadow rounded", placeholder: "Speisesaal" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label "Tischnummer:", class: "col-2 col-form-label" %>   
        <div class="col-10">
          <%= f.text_field :table_number, class: "form-control shadow rounded", placeholder: "Tisch-Platz-Nr." %>
        </div>
      </div>

      <%= f.submit :value => "BestÃ¤tigen", class: "btn ml-3 bg-bdh text-white "  %>
        
      </div>
       
      <%end%>
    </div>
  </div>
</div>