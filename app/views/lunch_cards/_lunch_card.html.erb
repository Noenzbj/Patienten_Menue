<div class="container">
  <% @lunch_cards.each do |lunch_card| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            f√ºr <%= link_to 'Patient*in', '#' %>
          </div>
          <div class="card-body">
            <h5 class="card-title text-black font-weight-bold">Vollkost, Mittag</h5>
            
            <p class="card-text"><%= "Normale Portion" if lunch_card.normal_portion == true%></p>
            <p class="card-text"><%= "Tagessuppe" if lunch_card.day_soup == true%></p>
            <p class="card-text"><%= "Dessert" if lunch_card.dessert == true%></p>
            <p class="card-text font-weight-bold"><%= "Passierte Kost" if lunch_card.pureed_food == true%></p>
            <p class="card-text font-weight-bold"><%= "Passiertes Fleisch" if lunch_card.pureed_meat == true%></p>
            <p class="card-text"><%= "Geschnittenes Fleisch" if lunch_card.cut_meat == true%></p>
            <p class="card-text"><%= "Kein Schweinefleisch" if lunch_card.no_pork == true%></p>
            <p class="card-text"><%= "Vegetarisch" if lunch_card.vegeterean == true%></p>
            <p class="card-text"><%= "Kein Fisch" if lunch_card.no_fish == true%></p>

            <p class="card-text">Bemerkungen: <%= truncate(lunch_card.comments, length: 100) %></p>

            <%= link_to "View", '#', class: "btn btn-outline-success" %>
            <%= link_to "Edit",'#', class: "btn btn-outline-info" %>
            <%= link_to "Delete", '#', class: "btn btn-outline-danger", data: {confirm: "Are you sure?"} %>

            
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(lunch_card.created_at) %> ago, 
            edited <%= time_ago_in_words(lunch_card.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div> 